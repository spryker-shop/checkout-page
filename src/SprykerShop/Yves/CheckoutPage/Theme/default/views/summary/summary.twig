                        data: {
                            name: item.name,
                            quantity: item.quantity,
                            price: item.sumPrice | money,
                            options: item.productOptions | default({}),
                            bundleItems: item.bundleItems | default([]),
                            quantitySalesUnit: item.quantitySalesUnit,
                            amountSalesUnit: item.amountSalesUnit,
