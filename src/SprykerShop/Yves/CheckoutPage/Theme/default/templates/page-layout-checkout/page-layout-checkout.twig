{% extends template('page-layout-main') %}

{% define data = {
    breadcrumbs: _view.stepBreadcrumbs.breadcrumbs
} %}

{% macro include_subform(method) %}
    {% if method.vars.template_path is defined %}
        {% include "@" ~ method.vars.template_path ~ ".twig" with {'form': method.parent, 'child': method} %}
    {% endif %}
{% endmacro %}

{% import _self as checkout %}

{% block sidebar %}{% endblock %}

{% block header %}
    {% include organism('header') with {
        data: {
            showSearchForm: false,
            showNavigation: false
        }
    } only %}
{% endblock %}
    
{% block breadcrumbs %}
    {% include view('cart-checkout-breadcrumb', 'CheckoutWidget') with {
        data: {
            isCartPage: false,
            checkoutBreadcrumbs: data.breadcrumbs
        }
    } only %}
{% endblock %}

{% block footer %}{% endblock %}
