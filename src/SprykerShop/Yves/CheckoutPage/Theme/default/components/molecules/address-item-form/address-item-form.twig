{% extends model('component') %}

{% define config = {
    name: 'address-item-form'
} %}

{% define data = {
    form: required
} %}

{% block body %}
    <div class="text-right spacing spacing--inner">
        <hr>
        <a href="{{url('customer/address')}}">{{ 'page.checkout.address.manage_your_addresses' | trans }}</a>
        <hr>
    </div>
    {% embed molecule('form') with {
        data: {
            form: data.form,
            enableStart: false,
            enableEnd: false,
            options: {
                attr: {
                    class: config.jsName ~ '__form'
                }
            }
        },
        embed: {
            jsName: config.jsName
        }
    } only %}
        {% block fields %}
            <div class="{{ embed.jsName }}__list col col--sm-12">
                {% include molecule('address-item-form-field-list', 'CheckoutPage') with {
                    data: {
                        items: data.form
                    }
                } only %}
            </div>
        {% endblock %}
    {% endembed %}
{% endblock %}
